<MDButton>:
    width: self.parent.width

<MDSnackbarText>:
    halign: "center"
    size_hint_x: 1

MDBoxLayout:
    MDGridLayout:
        cols: 2
        spacing: "5dp"
        padding: "10dp"

        MDGridLayout:
            cols: 1
            size_hint_x: 0.35

            MDButton:
                id: open_mod_folder
                on_release: app.open_mods_folder()

                MDButtonIcon:
                    icon: "folder"
                MDButtonText:
                    text: "Open Mods Folder"

            MDButton:
                on_release: app.toggle_checkbox(True, import_dml=True)
                MDButtonIcon:
                    icon: "import"
                MDButtonText:
                    text: "Import from DML"

            MDButton:
                id: restorePacks
                on_release: app.process_restore_originals()

                MDButtonIcon:
                    icon: "refresh"
                MDButtonText:
                    text: "Restore Song Packs"

            MDButton:
                id: generateString
                on_release: app.process_to_clipboard()

                MDButtonIcon:
                    icon: "code-json"
                MDButtonText:
                    text: "Generate Mod String"

            MDNavigationDrawerDivider:

            MDButton:
                on_release: app.toggle_checkbox(True)
                MDButtonText:
                    text: "All"

            MDButton:
                on_release: app.toggle_checkbox(False)
                MDButtonText:
                    text: "None"

            #MDButton:
            #    on_release: app.toggle_checkbox_from_input(True)
            #    MDButtonText:
            #        text: "Match"

            #MDButton:
            #    on_release: app.toggle_checkbox_from_input(False)
            #    MDButtonText:
            #        text: "Unmatch"

        MDGridLayout:
            id: packGrid
            rows: 2

            MDTextField:
                id: filter_input
                mode: "outlined"
                set_text: app.filter_pack_list
                on_text_validate: app.toggle_checkbox_from_input(True) # "Match"
                write_tab: False
                #focus: True

                MDTextFieldLeadingIcon:
                    icon: "magnify"
                MDTextFieldHintText:
                    text: "Filter by name (/regex/)"

            ScrollBox:
                id: pack_list_scroll
